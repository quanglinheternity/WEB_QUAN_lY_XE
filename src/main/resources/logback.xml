<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- ======================================================
         1. Console Appender (ghi log ra console - terminal)
         ====================================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %highlight giúp log có màu sắc theo level -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ======================================================
         2. File Appender (ghi log ra file, xoay vòng hằng ngày)
         ====================================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- File log chính -->
        <file>logs/app.log</file>

        <!-- Chính sách xoay vòng: mỗi ngày 1 file -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Định dạng tên file log theo ngày -->
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Giữ log trong 7 ngày -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ======================================================
         3. Root Logger (mức log mặc định cho toàn bộ app)
         ====================================================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- ======================================================
         4. Logger riêng cho package cụ thể (nếu muốn chi tiết)
         ====================================================== -->
    <logger name="com.myapp" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

</configuration>
